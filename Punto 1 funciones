def get_zone(max_hr):
    Z2_rango=max_hr*0.6
    Z2_rangomax=max_hr*0.69
    return Z2_rango, Z2_rangomax


def main(): 
    age = int(input("Ingrese su edad: "))
    max_hr = 208 - (0.7 * age)
    Z2_rango, Z2_rangomax= get_zone(max_hr)
    print(f"El rango promedio para entrenar en Zona 2 es entre {Z2_rango:.1f} y {Z2_rangomax:.1f} bpm.")

if __name__ == "__main__":
    main()
